{
    "name": "hello_swap",
    "version": "1.0.0",
    "description": "A Hello World COMIT app that does a swap",
    "main": "index.js",
    "scripts": {
        "postinstall": "git config core.hooksPath .githooks; yarn run gen",
        "check": "tsc",
        "gen": "mkdir -p ./gen && json2ts -i ./schema/siren.schema.json -o ./gen/siren.d.ts && json2ts -i ./schema/swap.schema.json -o ./gen/swap.d.ts",
        "start": "ts-node -- ./src/index.ts",
        "start-dev": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts",
        "fix": "tslint -p . --fix && prettier --write '**/*.{ts,js,json,yml}'",
        "lint": "tslint -p .",
        "prettier": "prettier --check '**/*.{ts,js,json,yml}'"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "json-schema-to-typescript": "^7.0.0",
        "nodemon": "^1.19.1",
        "prettier": "^1.18.2",
        "ts-node": "^8.3.0",
        "tslint": "^5.19.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.6.2"
    },
    "dependencies": {
        "@types/urijs": "^1.19.3",
        "axios": "^0.19.0",
        "bcoin": "https://github.com/bcoin-org/bcoin.git#75722469f3a3963bb2163bbc4edc763e6bdcf55f",
        "bitcoin-core": "^2.2.0",
        "delay": "^4.3.0",
        "ethers": "^4.0.36",
        "moment": "^2.24.0",
        "urijs": "^1.19.1"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4
    }
}
